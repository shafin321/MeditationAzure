@model MeiditationActivity.ViewModels.CreateRangeViewModel
@{
    ViewData["Title"] = "Create";
}

<div><h1 class="font-weight-lighter  text-blue col-6">Meditation Activity </h1></div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<style>
    input[type=range] {
        -webkit-appearance: none;
        background: none;
    }

    .bg-blue {
        background-color: #282D64;
    }


    .text-primary {
        color: #007bff !important;
    }

    .text-blue {
        color: #282D64 !important;
        
    }

    



    .btn {
        background-color: #282D64; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }



    input[type=range]::-webkit-slider-runnable-track {
        height: 5px;
        background: #ddd;
        border: none;
        border-radius: 3px;
    }

    input[type=range]::-ms-track {
        height: 5px;
        background: #ddd;
        border: none;
        border-radius: 3px;
    }

        input[type=range]::-moz-progress-bar {
            height: 5px;
            background: #ddd;
            border: none;
            border-radius: 3px;
        }

        input[type=range]::-webkit-slider-thumb {
            -webkit-appearance: none;
            border: none;
            height: 16px;
            width: 16px;
            border-radius: 50%;
            background: #555;
            margin-top: -5px;
            position: relative;
        }

        input[type=range]::-ms-thumb {
            -webkit-appearance: none;
            border: none;
            height: 16px;
            width: 16px;
            border-radius: 50%;
            background: #555;
            margin-top: -5px;
            position: relative;
        }

        input[type=range]::-moz-focus-inner {
            -webkit-appearance: none;
            border: none;
            height: 16px;
            width: 16px;
            border-radius: 50%;
            background: #555;
            margin-top: -5px;
            position: relative;
        }

        input[type=range]:focus {
            outline: none;
        }

            input[type=range]:focus::-webkit-slider-thumb:after {
                position: absolute;
                top: -35px;
                left: 50%;
                -webkit-transform: translateX(-50%);
                transform: translateX(-50%);
                background: #eee;
                border-radius: 5px;
                color: #555;
                padding: 5px 10px;
                border: 2px solid #555;
            }

            input[type=range]:focus::-ms-thumb:after {
                position: absolute;
                top: -35px;
                left: 50%;
                transform: translateX(-50%);
                background: #eee;
                border-radius: 5px;
                color: #555;
                padding: 5px 10px;
                border: 2px solid #555;
            }

            input[type=range]:focus:: track.range-slider {
                position: absolute;
                top: -35px;
                left: 50%;
                transform: translateX(-50%);
                background: #eee;
                border-radius: 5px;
                color: #555;
                padding: 5px 10px;
                border: 2px solid #555;
            }

            input[type=range]:focus::-webkit-slider-runnable-track {
                background: #ccc;
            }

            input[type=range]:focus::-ms-track {
                background: #ccc;
            }
</style>







<div class="container  bg-blue py-5">
    <div class="row justify-content-center">


        <div class="col-6 " style="background-color:white">
            <form class="py-3" asp-controller="MeditationApp" asp-action="Create" method="post">



                <div class="form-group row  ">
                    <div class="col-sm-12  ">

                        <div class="range-slider" style="    display: flex;
