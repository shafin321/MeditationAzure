                            <div style="display:flex">
                                <input asp-for="PhysicalLoad " class="range-slider__range text-primary" type="range" value="0" min="0" max="10" style="flex-grow: 1;">
                                <span class="range-slider__value" style="flex-basis:15px; text-align:center">0</span>
                            </div>
                            <div style="display: flex;
    justify-content: space-between;">
                                <span>Easy</span>
                                <span>Medium</span>
                                <span>Hard</span>
                            </div>
                        </div>
                    </div>
                </div>
                <br>

                <div class="form-group row  ">
                    <div class="col-sm-12 text-blue">

                        <div class="range-slider" style="    display: flex;
    flex-direction: column;

    justify-content: space-between;
    height: 50px;">


                            <label >Sleep Quality </label>
                            <div style="display:flex">
                                <input asp-for="SleepQuality " class="range-slider__range  " type="range" value="0" min="0" max="10" style="flex-grow: 1;">
                                <span class="range-slider__value" style="flex-basis:15px; text-align:center">0</span>
                            </div>
                            <div style="display: flex;
    justify-content: space-between;">
