                <div class="form-group row">
                    <div class="col-sm-12">

                        <div class="range-slider" style="    display: flex;
    flex-direction: column;

    justify-content: space-between;
    height: 50px;">
                            <label  asp-for="sleepingHour ">Sleep Hours </label>
                            <div style="display:flex">
                                <input asp-for="sleepingHour " class="range-slider__range" type="range" value="0" min="1" max="12" style="flex-grow: 1;">
                                <span class="range-slider__value" style="flex-basis:15px; text-align:center">0</span>
                            </div>
                            <div style="display: flex;
    justify-content: space-between;">
                                <span>1h</span>
                                <span></span>
                                <span>12h</span>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <br>

                <button  type="submit" class="btn btn-blue ">submit</button>
            </form>

            <script>
                var rangeSlider = function () {
                    var slider = $('.range-slider'),
                        range = $('.range-slider__range'),
                        value = $('.range-slider__value');
                    slider.each(function () {
                        value.each(function () {
                            var value = $(this).prev().attr('value');
                            $(this).html(value);
                        });
                        range.on('input', function () {
                            //alert(this.value);
                            $(this).next(value).html(this.value);
                            $(this).attr('value', this.value);
                        });
                    });
                };
                rangeSlider()
            </script>


        </div>

    </div>

   